<resources>

    <!-- ====================== Base application theme. ============================-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="AppCompat" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppCompat.FullScreen" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <!--<item name="android:windowFullscreen">true</item>-->
        <!--<item name="android:windowContentOverlay">@null</item>-->
    </style>


    <style name="button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAllCaps">false</item>

    </style>

    <style name="button.actionPrimary">
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/gebeyaPrimary</item>
    </style>

    <!-- ============================== Buttons ==============================-->
    <style name="button.actionSecondary">
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/button_border</item>
    </style>

    <!-- ============================== Text Views ============================== -->

    <style name="textView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">@dimen/dimen_16</item>
        <item name="android:layout_marginBottom">@dimen/dimen_16</item>
    </style>

    <style name="textView.title">
        <item name="android:textColor">@color/gebeyaPrimary</item>
        <item name="android:textSize">@dimen/dimen_25</item>
        <item name="android:layout_below">@id/logoImageView</item>

    </style>

    <style name="textView.link">

        <item name="android:autoLink">all</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="textView.menu">
        <item name="android:background">@drawable/drawer_menu_item_background</item>
        <item name="android:textColor">@color/drawer_menu_item_color</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:paddingTop">@dimen/dimen_14</item>
        <item name="android:paddingBottom">@dimen/dimen_14</item>
        <item name="android:paddingLeft">@dimen/dimen_30</item>
    </style>

    <!-- ============================== Fields ============================== -->

    <style name="inputField">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:layout_marginLeft">@dimen/dimen_40</item>
        <item name="android:layout_marginRight">@dimen/dimen_40</item>

        <item name="android:layout_marginTop">@dimen/dimen_30</item>
        <item name="android:layout_below">@id/titleTextView</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!-- ============================== Edit Texts ============================== -->
    <style name="editText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="editText.email">
        <item name="android:imeOptions">actionNext</item>
        <item name="android:hint">@string/email_address</item>
    </style>

    <style name="editText.textPassword">
        <item name="android:hint">@string/password</item>
        <item name="android:inputType">textPassword</item>
        <item name="android:imeOptions">actionGo</item>
    </style>

    <!-- ============================== CheckBoxes -->
    <style name="checkbox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:textColor">@color/darkest_gray</item>
        <item name="android:layout_marginTop">@dimen/dimen_4</item>
        <item name="android:layout_marginBottom">@dimen/dimen_4</item>
    </style>

    <dimen name="dimen_14">14dp</dimen>

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
</resources>
