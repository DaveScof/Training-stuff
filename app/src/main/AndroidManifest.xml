<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gebeya.gebeyaenterprise">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.Splash"
            android:theme="@style/AppTheme.FullScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activity.TourScreen"
                  android:theme="@style/AppTheme.FullScreen"/>

        <activity android:name=".activity.SignUpActivity"
                  android:parentActivityName=".activity.TourScreen"
                  android:theme="@style/AppTheme.FullScreen"/>

        <activity android:name=".activity.SignIn"
                  android:parentActivityName=".activity.TourScreen"
                  android:theme="@style/AppTheme.FullScreen"/>

        <activity android:name=".activity.SignUpClientActivity"
                  android:theme="@style/AppTheme.FullScreen"
                  android:parentActivityName=".activity.SignUpActivity"/>

        <activity android:name=".activity.SignUpTalentActivity"
                  android:theme="@style/AppTheme.FullScreen"
                  android:parentActivityName=".activity.SignUpActivity"/>

        <activity android:name=".activity.ProjectInfoActivity"/>


        <receiver android:name=".services.PhoneNumberReceiver">
            <intent-filter>
                <action android:name="com.gebeya.gebeyaenterprise.PHONE_CALL"></action>
            </intent-filter>
        </receiver>

    </application>
</manifest>